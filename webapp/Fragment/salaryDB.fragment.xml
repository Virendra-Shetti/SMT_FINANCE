<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout">
	<OverflowToolbar>
		<Label text="Employee Database" design="Bold"></Label>
		<!--</OverflowToolbar>-->
		<!--<OverflowToolbar>-->
		<ToolbarSpacer></ToolbarSpacer>
		<SearchField search="onSearch" liveChange="onSearch" width="20%">
			<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow"/>
			</layoutData>
		</SearchField>
		<ComboBox placeholder="Select Year" id="idComboBox1" class="sapUiTinyMargin" selectionChange="onGetValue">
			<core:Item text="2016"></core:Item>
			<core:Item text="2017"></core:Item>
			<core:Item text="2018"></core:Item>
			<core:Item text="2019"></core:Item>
			<core:Item text="2020"></core:Item>
		</ComboBox>
		<ComboBox placeholder="Select Month" id="idComboBox2" class="sapUiTinyMargin" selectionChange="onGetValue1">
			<core:Item text="2016"></core:Item>
			<core:Item text="2017"></core:Item>
			<core:Item text="2018"></core:Item>
			<core:Item text="2019"></core:Item>
			<core:Item text="2020"></core:Item>
		</ComboBox>
	</OverflowToolbar>
	<Table>
		<columns>
			<Column>
				<Text text="Employee ID"></Text>
			</Column>
			<Column>
				<Text text="Employee Name"></Text>
			</Column>
			<Column>
				<Text text="Designation"></Text>
			</Column>
			<Column>
				<Text text="Month"></Text>
			</Column>
			<Column>
				<Text text="Salary"></Text>
			</Column>
		</columns>
	</Table>
</core:FragmentDefinition>